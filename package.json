{
    "name": "epyc_discord_bot",
    "version": "0.0.1",
    "author": "Jonathan Harford",
    "description": "A discord.js bot template written with TypeScript",
    "private": true,
    "engines": {
        "node": ">=18.0.0"
    },
    "type": "module",
    "exports": [
        "./dist/start-bot.js",
        "./dist/start-manager.js",
        "./dist/start-commands.js"
    ],
    "scripts": {
        "lint": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --fix --cache --ext .js,.jsx,.ts,.tsx",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "clean:doit": "git clean -xdf --exclude=\"/config/**/*\"",
        "clean:dry": "git clean -xdf --exclude=\"/config/**/*\" --dry-run",
        "build": "tsc --project tsconfig.json",
        "commands:view": "pnpm run build && node --enable-source-maps dist/start-commands.js commands view",
        "commands:register": "pnpm run build && node --enable-source-maps dist/start-commands.js commands register",
        "commands:register:guild": "pnpm run build && node --enable-source-maps dist/start-commands.js commands register guild",
        "commands:register:global": "pnpm run build && node --enable-source-maps dist/start-commands.js commands register global",
        "commands:rename": "pnpm run build && node --enable-source-maps dist/start-commands.js commands rename",
        "commands:delete": "pnpm run build && node --enable-source-maps dist/start-commands.js commands delete",
        "commands:clear": "pnpm run build && node --enable-source-maps dist/start-commands.js commands clear",
        "commands:clear:guild": "pnpm run build && node --enable-source-maps dist/start-commands.js commands clear guild",
        "commands:clear:global": "pnpm run build && node --enable-source-maps dist/start-commands.js commands clear global",
        "start": "pnpm run start:bot",
        "start:bot": "pnpm run build && node --enable-source-maps dist/start-bot.js",
        "start:manager": "pnpm run build && node --enable-source-maps dist/start-manager.js",
        "start:pm2": "pnpm run build && pnpm run pm2:start",
        "pm2:start": "pm2 start process.json",
        "pm2:stop": "pm2 stop process.json",
        "pm2:delete": "pm2 delete process.json",
        "prisma:generate": "prisma generate",
        "prisma:migrate:dev": "prisma migrate dev",
        "prisma:migrate:deploy": "prisma migrate deploy",
        "prisma:studio": "prisma studio",
        "prisma:format": "prisma format",
        "prisma:reset": "prisma migrate reset --force",
        "prisma:validate": "prisma validate",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:unit": "vitest run --exclude **/*.integration.test.ts",
        "test:integration": "vitest run **/*.integration.test.ts",
        "validate-lang": "pnpm run build && node --enable-source-maps scripts/validate-language-keys.js"
    },
    "dependencies": {
        "@discordjs/rest": "^2.4.3",
        "@prisma/client": "^6.7.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.1",
        "cron-parser": "^4.9.0",
        "discord.js": "^14.18.0",
        "discord.js-rate-limiter": "1.3.2",
        "dotenv": "^16.5.0",
        "express": "4.21.2",
        "express-promise-router": "4.1.1",
        "filesize": "10.1.6",
        "human-id": "^4.1.1",
        "luxon": "3.5.0",
        "nanoid": "^5.1.5",
        "node-fetch": "3.3.2",
        "node-schedule": "2.1.1",
        "pino": "9.6.0",
        "pino-pretty": "13.0.0",
        "pm2": "^5.4.3",
        "prisma": "^6.7.0",
        "reflect-metadata": "^0.2.2",
        "remove-markdown": "0.6.0",
        "zod": "4.0.0-beta.20250503T014749"
    },
    "devDependencies": {
        "@types/express": "4.17.21",
        "@types/glob": "^8.1.0",
        "@types/luxon": "3.4.2",
        "@types/node": "^22.13.4",
        "@types/node-schedule": "2.1.7",
        "@types/remove-markdown": "0.3.4",
        "@typescript-eslint/eslint-plugin": "^8.24.1",
        "@typescript-eslint/parser": "^8.24.1",
        "@vitest/coverage-v8": "^3.0.8",
        "eslint": "^9.20.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-unicorn": "^57.0.0",
        "glob": "^11.0.2",
        "prettier": "^3.5.1",
        "tsx": "^4.19.4",
        "typescript": "^5.7.3",
        "vitest": "^3.0.8"
    }
}